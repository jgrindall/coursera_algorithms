{
    "compilerOptions": {
        "outDir": "./dist/",
        "skipLibCheck": true,
        "sourceMap": true,
        "lib": ["es6", "dom", "es2016", "es2017"],
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "allowJs": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "exclude": ["run.js", "test.js", "dist/**", "node_modules/**"]
}
